<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textview"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        tools:context="co.touchlab.materialdemo.fragments.CardViewFragment"
        android:layout_margin="@dimen/padding_xtiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/darker_gray"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <TextView
            android:background="?android:selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ok_button"
            android:focusable="false"
            android:gravity="left"
            android:textSize="@dimen/text_large"
            android:padding="@dimen/padding_large"
            android:text="This is a CardView with a TextView."/>

    </android.support.v7.widget.CardView>

</LinearLayout>