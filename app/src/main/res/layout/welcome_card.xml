<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/welcome"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    tools:context="co.touchlab.materialdemo.fragments.CardViewFragment"
    android:layout_margin="@dimen/padding_xtiny"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/darker_gray"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:background="?android:selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:padding="@dimen/padding_large"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Welcome to the Touch Lab Material Demo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subtitleTextView"
            android:paddingTop="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:text="Check out these cool cards"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionTextView"
            android:paddingBottom="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_large"
            android:paddingTop="@dimen/padding_small"
            android:textSize="@dimen/text_tiny"
            android:text="This is a welcome card that will go away when you click it"/>

        <View
            android:id="@+id/cardDivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/white"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:visibility="visible"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/ok_button"
            android:focusable="false"
            android:gravity="left|center"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_action_tick"
            android:drawablePadding="@dimen/padding_wedge"
            android:text="Got it"/>
    </LinearLayout>

</android.support.v7.widget.CardView>

</LinearLayout>