<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context="co.touchlab.materialdemo.RecyclerViewMainFragment">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:textColor="#000"
            android:text="@string/elevation_prompt"/>

        <ImageView
            android:id="@+id/photo_to_clip"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/circle"
            android:src="@drawable/gsxr"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="6dp"
            android:text="Shapes with elevation values of '2', '8', and '12':"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle"
            android:layout_gravity="center_horizontal"
            android:elevation="2dp"
            />

        <ImageView
            android:layout_marginTop="-30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle"
            android:layout_gravity="center_horizontal"
            android:elevation="8dp"
            />

        <ImageView
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle"
            android:layout_gravity="center_horizontal"
            android:elevation="12dp"
            />

    </LinearLayout>
</ScrollView>